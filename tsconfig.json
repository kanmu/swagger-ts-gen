{
  "compilerOptions": {
    "alwaysStrict": true,
    "sourceMap": true,
    "declaration": true,
    "declarationDir": "lib",
    "target": "es5",
    "removeComments": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "stripInternal": true,
    "noFallthroughCasesInSwitch": true,
    "outDir": "lib",
    "noEmitOnError": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "types": ["node"],
  "include": ["./src"],
  "exclude": ["./node_modules"]
}
